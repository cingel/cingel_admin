<!DOCTYPE html>
<html>
<head>
  <title><%= admin_page_title %></title>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <%= csrf_meta_tag %>
  <%= render :partial => "cingel_admin/shared/css_assets" %>
  <%= render :partial => "cingel_admin/shared/js_assets" %>
  <%= yield :head %>
</head>
<body>
<div id="main_wrapper">
  
  <%= render_flash_messages %>
  
  <div id="header" class="section">
    <%= render :partial => "cingel_admin/shared/header_bar" %>
    <%= admin_title %>
    <%= admin_main_menu %>
  </div>
  
  <table id="content_table">
		<tr>
			<td id="content_wrapper">
			  <% if content_for?(:header) %>
			    <div id="content_header" class="header">
			      <%= yield :header %>
  			  </div>
			  <% end %>
				<div id="content" class="section">
					<%= yield %>
				</div>
			</td>
			<% if content_for?(:sidebar) %>
				<td id="sidebar" class="aside">
				  <%= yield :sidebar %>
				</td>
			<% end -%>
		</tr>
	</table>
	
	<div id="footer" class="section">
    &copy; <%= Date.today.year %>
  </div>

</div>
</body>
</html>
